<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.nbassignment">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_no_broker"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_no_broker_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NBAssignment">
        <activity android:name=".views.ShowDetailActivity" />
        <activity android:name=".views.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MainActivity">

        </activity>
    </application>

</manifest>